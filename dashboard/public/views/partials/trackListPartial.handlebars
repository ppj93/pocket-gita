<div>
    <div>
        <button type="button" class="btn btn-primary" ng-click="trkCtrl.setupAddOrEditTrack(trkCtrl.constants.actions.add)">Add New Track</button>
    </div> 

    <!--
        TODO: show track pic also 
        <div n-items-in-row n="3" controller="trkCtrl" items="tracks" row-template="/trackListRowPartial"></div>
    -->

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="row">
                    <th class="col-md-10">Name</th>
                    <th class="col-md-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="row" ng-repeat="track in trkCtrl.tracks">
                        <td class="col-md-10">{[track.name]}</td>
                    <td class="col-md-2">
                        <button type="button" class="btn btn-primary" ng-click="trkCtrl.setupAddOrEditTrack(trkCtrl.constants.actions.edit, track)">Edit</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    
</div>