<div>
    <div>
        <button type="button" class="btn btn-primary" ng-click="albCtrl.setupAddOrEditAlbum(albCtrl.constants.actions.add)">Add New Album</button>
    </div> 

    <!--
        TODO: show album pic also 
        <div n-items-in-row n="3" controller="albCtrl" items="albums" row-template="/albumListRowPartial"></div>
    -->

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="row">
                    <th class="col-md-10">Name</th>
                    <th class="col-md-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="row" ng-repeat="album in albCtrl.albums">
                    <td class="col-md-10">{[album.name]}</td>
                    <td class="col-md-2">
                        <button type="button" class="btn btn-primary" ng-click="albCtrl.setupAddOrEditAlbum(albCtrl.constants.actions.edit, album)">Edit</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    
</div>